#Gameplay
#Fork, monster or trap + loot -- Split between 2 options
player_stats = {"max_health":20,"health":20,"max_attack":5,"attack":5,"armour":2,"flee":False,"exp":0,"level":0,"exit":False,"status_effects":{"poision_duration":0,"weaken_duration":0,"weaken_state":False}}
encounter = 0
scale = modifier("2",0)
boss = True
def fork(player_stats,scale,encounter):
  print("You encounter a fork in the path, leading to different places! What do you do? ")
  while True:
    choice = input(f"1 --> Go left, you hear whispers in the shadows\n2 --> Go right, you catch a glimpse of some metal\n3 --> Ascend from the dungeon\n{divider}\n")
    if len(choice) == 1:
      if choice in "123":
        break
    print("Enter a valid option!")
  if choice == "1":
    random_room(player_stats,scale,encounter)
  if choice == "3":
    print("You no longer feel in control of your body! ")
    player_stats["exit"] = True
  if choice == "2":
    roll = random.randint(1,3)
    if roll == 1:
      trap_room(player_stats,scale,encounter)
    else:
      print("You have uncovered some treasure!")
      upgrade(player_stats)
